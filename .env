# =============================================================================
# New Revival Baptist Church - Backend Environment Variables
# =============================================================================

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nrbc_church
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nrbc_church

# JWT Secret (Generate a strong secret key)
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters

# Email Configuration (Gmail SMTP)
EMAIL_USER=your-church-email@gmail.com
EMAIL_PASS=your-app-specific-password
PRAYER_EMAIL=prayers@nrbcarepo.org
CONTACT_EMAIL=info@nrbcarepo.org

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Church Information
CHURCH_NAME=New Revival Baptist Church
CHURCH_LOCATION=Arepo, Ogun State, Nigeria
CHURCH_PHONE=+234-xxx-xxx-xxxx
CHURCH_EMAIL=info@nrbcarepo.org
CHURCH_WEBSITE=https://nrbcarepo.org

# Social Media URLs
FACEBOOK_URL=https://www.facebook.com/nrbcarepong/
INSTAGRAM_URL=https://instagram.com/nrbcarepo
TWITTER_URL=https://twitter.com/nrbcarepo
YOUTUBE_URL=https://youtube.com/@nrbcarepo

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here
CORS_ORIGIN=https://nrbcarepo.org,http://localhost:3000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ADMIN_NOTIFICATION_EMAIL=admin@nrbcarepo.org

# Third Party Services (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
FACEBOOK_PIXEL_ID=123456789

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_SWAGGER_DOCS=true